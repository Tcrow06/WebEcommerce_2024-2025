<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
	<encludes>
		<pattern>/api*</pattern>
	</encludes>
	
	<decorator name="aadmin" page="admin.jsp"> <!-- .jsp là master layout -->
		<pattern>/aadmin*</pattern>
	</decorator>

	<decorator name="chu-doanh-nghiep" page="admin.jsp"> <!-- .jsp là master layout -->
		<pattern>/chu-doanh-nghiep*</pattern>
	</decorator>
	
	<decorator name="web" page="web.jsp">
		<pattern>/*</pattern>
	</decorator>

	<decorator name="auth" page="auth.jsp">
		<pattern>/dang-nhap</pattern>
	</decorator>

</decorators>